<!DOCTYPE html><html><head><title>Admin</title><link rel="stylesheet" href="/style.css"></head>
<body><div class="layout"><%- include('partials/sidebar') %><div class="content">
    <h1>Staff Access</h1>
    <div style="display:flex; gap:20px;">
        <div class="card" style="flex:1"><h3>Create Local</h3><form action="/admin/create-local" method="POST"><input name="username" placeholder="User"><input name="password" placeholder="Pass"><select name="role"><option>Staff</option><option>Management</option><option>Admin</option></select><button>Create</button></form></div>
        <div class="card" style="flex:1"><h3>Authorize ID</h3><form action="/admin/create-discord" method="POST"><input name="discord_id" placeholder="Discord ID"><select name="role"><option>Staff</option><option>Management</option><option>Admin</option></select><button style="background:#5865F2">Auth</button></form></div>
    </div>
    <div class="card"><h3>List</h3><ul><% staff.forEach(s => { %><li><%= s.username %> (<%= s.role %>)</li><% }) %></ul></div>
</div></div></body></html>
